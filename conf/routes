# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# DO NOT CHANGE
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# DO NOT CHANGE

# Risk information

GET     /                      controllers.GameController.index
POST    /start-game            controllers.GameController.start

GET     /game                  controllers.GameController.game

# Game specific
GET     /game                       controllers.GameController.game

GET     /game/socket                controllers.GameController.socket

GET     /game/description           controllers.GameController.description

GET     /game/rules                 controllers.GameController.rules